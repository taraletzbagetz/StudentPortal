@model StudentPortal.Web.Models.AddStudentVM

<h1>Add Student</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="type" name="name" class="form-control" value="" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" name="email" class="form-control" value="" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" name="phone" class="form-control" value="" asp-for="Phone"/>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed"/>
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>