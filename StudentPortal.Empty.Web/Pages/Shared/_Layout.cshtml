<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Free Billing - @ViewBag.Title</title>
    <link href="~/site.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("header", false)
</head>
<body>
    <header class="flex 
                    justify-between
                    w-full
                    bg-blue-900
                    text-white
                    p-3">
        <h1 class="font-bold text-2xl">NDS App</h1>
        <ul class="flex text-white-300">
            <li class="mx-2 hover:text-blue-500"><a href="/">Home</a></li>
            <li class="mx-2 hover:text-blue-500"><a href="/Contact">Contact</a></li>
        </ul>
    </header>
    @* <div class="bg-gray-100 p-2 container mx-auto"> 
    <div class="bg-gray-100 p-2 w-full h-screen">*@
    <div class="bg-gray-500 p-2 w-full h-[calc(100vh-80px)] overflow-auto">
        @RenderBody()
    </div>
    <footer class="text-center bg-blue-900 text-white">&copy; 2025 Naxos Digital Services Ltd.  All rights reserved. </footer>
    @RenderSection("scripts", false)
</body>
</html>
